                  CanUserDeleteRows="True" CanUserReorderColumns="True" 
                  CanUserSortColumns="True" Margin="0,10,-0.4,-0.4" FontWeight="Bold" FontSize="30">
            <DataGrid.Columns/>
        </DataGrid>
    </Grid>
</Window>
